<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/color1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".FragmentDetails"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_details_title"
                android:layout_width="289dp"
                android:layout_height="wrap_content"
                android:textColor="@color/color4"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_exit"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:background="@drawable/roundcolor4"
                android:text="x"
                android:layout_marginBottom="2sp"
                android:layout_marginTop="2sp"
                android:layout_marginStart="2sp"
                android:textColor="@color/color2"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="2sp" />

        </LinearLayout>
        <TextView
            android:id="@+id/tv_details_overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_detail_images"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_favortie"
            android:layout_width="174dp"
            android:layout_height="57dp"
            android:layout_gravity="center"
            android:background="@drawable/roundcolor4"
            android:text="Save as favorite"
            android:textColor="@color/color2" />

        <TextView
            android:id="@+id/tv_related_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Related Movies"
            android:textAlignment="center"
            android:textColor="@color/color4"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:orientation="horizontal">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_related_movies"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>


    </LinearLayout>

</ScrollView>